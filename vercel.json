{
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/frontend/:path*",
      "destination": "/frontend/:path*"
    },
    {
      "source": "/backend/:path*",
      "destination": "/backend/:path*"
    }
  ]
}
